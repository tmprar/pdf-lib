{
  "name": "pdf-lib",
  "version": "1.17.1",
  "description": "Create and modify PDF files with JavaScript",
  "scripts": {
    "release:latest": "pnpm publish --tag latest && pnpm pack && pnpm release:tag",
    "release:next": "pnpm publish --tag next",
    "release:prep": "pnpm clean && pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "release:tag": "TAG=\"v$(pnpm --silent get:version)\" && git tag $TAG && git push origin $TAG",
    "get:version": "node --eval 'console.log(require(`./package.json`).version)'",
    "clean": "rimraf build cjs dist es scratchpad/build coverage tsBuildInfo.json apps/node-build apps/node/tsBuildInfo.json isolate*.log flamegraph.html out.pdf",
    "typecheck": "tsc --noEmit --incremental false --tsBuildInfoFile null",
    "test": "vitest run",
    "testw": "vitest",
    "testc": "vitest run --coverage && open coverage/index.html",
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write \"./{src,tests,apps/node,apps/web}/**/*.{ts,js,json,html,css}\" --log-level error",
    "build": "tsup",
    "build:cjs": "tsup --format cjs --outDir cjs",
    "build:es": "tsup --format esm --outDir es",
    "build:esm": "tsup --format esm --outDir dist --out-extension .esm.js",
    "build:esm:min": "tsup --format esm --outDir dist --minify --out-extension .esm.min.js",
    "build:umd": "tsup --format iife --outDir dist --global-name PDFLib --out-extension .js",
    "build:umd:min": "tsup --format iife --outDir dist --global-name PDFLib --minify --out-extension .min.js",
    "scratchpad:start": "tsc --build scratchpad/tsconfig.json --watch",
    "scratchpad:run": "node scratchpad/build/scratchpad/index.js",
    "scratchpad:flame": "rimraf isolate*.log && node --prof scratchpad/build/scratchpad/index.js && node --prof-process --preprocess -j isolate*.log | flamebearer",
    "apps:node": "tsc --build apps/node/tsconfig.json && node apps/node-build/index.js",
    "apps:web": "http-server -c-1 .",
    "apps:web:mac": "bash -c 'sleep 1 && open http://localhost:8080/apps/web/test1.html' & pnpm apps:web"
  },
  "main": "cjs/index.js",
  "module": "es/index.js",
  "unpkg": "dist/pdf-lib.min.js",
  "types": "cjs/index.d.ts",
  "files": [
    "cjs/",
    "dist/",
    "es/",
    "src/",
    "LICENSE.md",
    "package.json",
    "README.md",
    "pnpm-lock.yaml"
  ],
  "dependencies": {
    "@pdf-lib/standard-fonts": "^1.0.0",
    "@pdf-lib/upng": "^1.0.1",
    "pako": "^1.0.11",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@pdf-lib/fontkit": "^1.1.0",
    "@types/node": "^24.0.10",
    "@types/pako": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "flamebearer": "^1.1.3",
    "http-server": "^14.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "undici-types": "^7.11.0",
    "vitest": "^3.2.4"
  },
  "license": "MIT",
  "private": false
}
